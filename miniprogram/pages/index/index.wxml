<view class="container">
  <view class="swiper">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" >
        <swiper-item wx:for="{{pic}}" bindtap="set" data-it="{{item}}" class="new">
          <image src="{{item}}" mode="aspectFill"></image>
        </swiper-item>
    </swiper>
  </view>
  <view class="serchbox">
    <navigator url="../search/search">
    <view class="iptbox">
      <view class="text">搜索</view>
      <image src="../../images/搜索.png"/>
    </view>
  </navigator>
  </view>
  <view class="bottom">
    <view class="rec_text">上新啦！</view>
    <view class="pic_group">
      <view class="pic_box" wx:for="{{dataobj}}" >
        <view bindtap="set" data-it="{{item}}" class="new">
        <image mode="aspectFill" src="{{item.products_pic[0]}}"></image>
        <view  class="itro" >{{item.products_name}}</view>
        <view class="bbtm">
          <view>￥{{item.products_price}}</view>
          <image src="../../images/购物车.png"/>
        </view>
      </view>
      </view>
    </view>
    <view class="rec_text_2">最热单品</view>
    <view class="pic_group">
      <view class="pic_box" wx:for="{{hot}}">
        <view bindtap="set" data-it="{{item}}" class="new">
        <image mode="aspectFill" src="{{item.products_pic[0]}}"></image>
        <view class="itro">{{item.products_name}}</view>
        <view class="bbtm">
          <view>￥{{item.products_price}}</view>
          <image src="../../images/购物车.png"/>
        </view>
      </view>
      </view>
    </view>
  </view>
</view>